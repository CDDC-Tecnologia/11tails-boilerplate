<style>
.fab__multi {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 1000;
}

.fab__btn {
    height: 60px;
    width: 60px;
    background-color: #014898;
    border-radius: 50%;
    color: #fff;
    z-index: 1;
    display: grid;
    place-items: center;
}

.fab__btn i {
    font-size: 22px;
}

.fab__btns {
position: absolute;
width: 100%;
bottom: 120%;
}

.fab__btns a {
    display: grid;
    place-items: center;
    width: 55px;
    height: 55px;
    border-radius: 50%;
    text-decoration: none;
    margin: 10px auto 0;
    line-height: 1.15;
    color: #fff;
    opacity: 0;
    visibility: hidden;
    box-shadow: 0 0 5px 1px rgba(51, 51, 51, .3);
}

.fab__btns a:hover {
transform: scale(1.05);
}

.fab__btns a:nth-child(1) {background-color: hsl(142, 70%, 49%); transition: opacity .2s ease-in-out .3s, transform .15s ease-in-out;}
.fab__btns a:nth-child(2) {background-color: hsl(199, 98%, 48%); transition: opacity .2s ease-in-out .25s, transform .15s ease-in-out;}
.fab__btns a:nth-child(3) {background-color: hsl(4, 90%, 58%); transition: opacity .2s ease-in-out .2s, transform .15s ease-in-out;}
/* .fab__btns a:nth-child(4) {background-color: #4CAF50; transition: opacity .2s ease-in-out .15s, transform .15s ease-in-out;} */

.fab__multi a i {
position: absolute;
top: 50%; left: 50%;
transform: translate(-50%, -50%);
}

.adminToggle {
-webkit-appearance: none;
position: absolute;
border-radius: 50%;
top: 0; left: 0;
margin: 0;
width: 100%;
height: 100%;
cursor: pointer;
background-color: transparent;
border: none;
outline: none;
z-index: 2;
transition: box-shadow .2s ease-in-out;
box-shadow: 0 3px 5px 1px rgba(51, 51, 51, .3);
margin: 0 !important;
}

.adminToggle:hover {
    box-shadow: 1px 1px 10px #014898;
}

.adminToggle:checked ~ .fab__btns a {
    opacity: 1;
    visibility: visible;
}

/* Show tooltip content on hover */
[tooltip]:before {
    bottom: 25%;
    font-family: arial;
    font-weight: 600;
    border-radius: 2px;
    background: #585858;
    color: #fff;
    content: attr(tooltip);
    font-size: 12px;
    visibility: hidden;
    opacity: 0;
    padding: 5px 7px;
    margin-right: 12px;
    position: absolute;
    right: 100%;
    white-space: nowrap;
  }
  
  [tooltip]:hover:before,
  [tooltip]:hover:after {
    visibility: visible;
    opacity: 1;
  }
</style>

